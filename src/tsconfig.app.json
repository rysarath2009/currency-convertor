{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "lib": [
            "es2016",
            "dom"
        ],
        "outDir": "../out-tsc/app",
        "module": "es2015",
        "baseUrl": "./app",
        "paths": {
            "@angular/*": [
                "../../node_modules/@angular/*"
            ],
            "config/*": [
                "../../config/*"
            ],
            "components": [
                "components/*"
            ],
            "globalStyles": [
                "global-styles/*"
            ],
            "routes": [
                "routes/*"
            ],
            "services": [
                "services/*"
            ],
            "shared": [
                "shared/*"
            ]
        },
        "types": []
    },
    "exclude": [
        "test.js",
        "**/*.spec.ts"
    ]
}